@using BlazorAppServer.Components

@page "/"
<HeaderComponent />


<h1>Hello, world!</h1>

Welcome to your new app.
<Counter IncreamentAmount="6" />



<h3>Lambda expressions</h3>

<h2>@message</h2>;
@for (int i = 0; i < 3; i++)
{
	var btnNumber = i; // i's value to be the same in all lambdas

	<button class="btn btn-danger" @onclick="@(e=> UpdateHeading(e, i))">
		Button #@i
	</button>
}


<PasswodField @bind-Password="password" />


@code {
	private string message = "Select a button to learn its position.";

	private string password;

	public void UpdateHeading(MouseEventArgs e, int buttonNumber)
	{
		message = $"You selected Button #{buttonNumber}" +
				$" at mouse position: {e.ClientX} x {e.ClientY}";


	}
}
